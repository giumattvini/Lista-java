public class QuestaoCinco {
	private double raio;
	
	public QuestaoCinco(double raio) {
		this.raio = raio;
	}
	
	public double getRaio() {
		return raio;
	}
	
	public void setRaio(double novoRaio) {
		this.raio = novoRaio;
	}
	
	public void calcularArea(double areaCalcular) {
		areaCalcular = 3.14 * raio * raio; 
	}
	
	public void calcularPerimetro(double areaPerimetro) {
		areaPerimetro = 2 * 3.14 * raio;	
	}
	
}
